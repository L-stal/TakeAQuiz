<MudAppBar Elevation="1">

    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
    <MudSpacer />
    <LoginDisplay />

</MudAppBar>

<MudDrawer @bind-Open="@open" Elevation="1">

    <MudDrawerHeader>
        <MudText Typo="Typo.h5">Take a Quiz</MudText>
    </MudDrawerHeader>

    <MudNavMenu>
        <MudNavLink Href="/profile">Profile</MudNavLink>
        <MudNavGroup Title="Quiz" Expanded="true">
            <MudNavLink Href="/play-quiz">Play</MudNavLink>
            <MudNavLink Href="/create-quiz">Create</MudNavLink>
            <MudNavLink Href="/view-quizzes">View Quizzes</MudNavLink>
        </MudNavGroup>
        <MudNavLink Href="/settings">Settings</MudNavLink>
    </MudNavMenu>

</MudDrawer>

@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}
